<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button

        android:id="@+id/DirectionsMenu"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/colorButtonGreen"
        android:drawableLeft="@drawable/location_icon"
        android:text="DIRECTIONS"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/DirectoryMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/DirectoryMenu"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:backgroundTint="@color/colorButtonGreen"
        android:drawableLeft="@drawable/address_book"
        android:text="DIRECTORY"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/WaitTimeMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ContactUsMenu"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:backgroundTint="@color/colorButtonGreen"
        android:drawableLeft="@drawable/contact_us"
        android:text="CONTACT US"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/HelpMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/WaitTimeMenu"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:backgroundTint="@color/colorButtonGreen"
        android:drawableLeft="@drawable/wait_time_icon"
        android:text="WAIT TIMES"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/ContactUsMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/HelpMenu"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:backgroundTint="@color/colorButtonGreen"
        android:drawableLeft="@drawable/help_icon"
        android:text="HELP"
        android:textColor="@color/colorTextWhite"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>