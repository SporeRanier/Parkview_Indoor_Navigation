<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Tags Descriptions:
        nts_active_color: color of selected item
        nts_color: color of the little bar underneath a selected item
        mts_inactive_color:
        nts_size: size of the text
    -->

    <com.gigamole.navigationtabstrip.NavigationTabStrip
        android:id="@+id/nts_top"
        android:layout_width="match_parent"
        android:layout_height="54dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:background="#00793A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:nts_active_color="#fff"
        app:nts_color="#fff"
        app:nts_corners_radius="2dp"
        app:nts_inactive_color="#000"
        app:nts_size="10sp"
        app:nts_titles="@array/BottomNavTitles"
        app:nts_weight="3dp" />

</android.support.constraint.ConstraintLayout>