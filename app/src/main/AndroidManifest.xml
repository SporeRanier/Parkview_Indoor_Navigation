<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ipfw.parkview.indoornavigation">
    <!-- For using GPS and Location in general -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <!-- For using location derived from bluetooth beacons -->
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/parkview_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/parkview_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".RouteActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MapActivity" />
        <activity android:name=".UpcomingEvents" />
        <activity android:name=".MostVisitedLocations"></activity>
    </application>

</manifest>